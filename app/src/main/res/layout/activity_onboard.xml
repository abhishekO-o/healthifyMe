<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".mainapp.Onboard">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toTopOf="@+id/mood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_hamburger" />

    <ImageView
        android:id="@+id/waterReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/mood"
        app:layout_constraintEnd_toEndOf="@+id/calorie"
        app:srcCompat="@drawable/waterbtn" />

    <ImageView
        android:id="@+id/period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="142dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/waterReminder"
        app:layout_constraintTop_toBottomOf="@+id/mood"
        app:srcCompat="@drawable/periodtracker_btn" />

    <ImageView
        android:id="@+id/mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/period"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/mood_btn" />

    <ImageView
        android:id="@+id/calorie"
        android:layout_width="221dp"
        android:layout_height="252dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/period"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/caloriecounter_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>