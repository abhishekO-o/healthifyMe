<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activities"
    tools:context=".Activities">

    <TextView
        android:id="@+id/textViewWhatsOnYourMind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="What's on your mind?"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSelectTopics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Select Topics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWhatsOnYourMind" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectTopics"
        tools:layout_editor_absoluteX="14dp">

        <TextView
            android:id="@+id/textViewCooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cooking"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@drawable/text_border"
            android:layout_marginRight="10dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/textViewWatchingMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:text="Watching Movie"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:padding="2dp"/>


        <TextView
            android:id="@+id/textViewReadingBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reading Book"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/text_border"
            android:padding="2dp"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectTopics"
        tools:layout_editor_absoluteX="14dp">
        <TextView
            android:id="@+id/textViewShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:padding="2dp"
            android:text="Shopping"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/textViewNetflixAndChill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Netflix and Chill"
            android:gravity="center"
            android:background="@drawable/text_border"
            android:layout_marginRight="10dp"
            android:padding="2dp"/>


        <TextView
            android:id="@+id/textViewWishingFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wishing for"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/text_border"
            android:padding="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectTopics"
        tools:layout_editor_absoluteX="14dp">

        <TextView
            android:id="@+id/textViewTravelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:padding="2dp"
            android:text="Travelling" />

        <TextView
            android:id="@+id/textViewRelaxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:padding="2dp"
            android:text="Relaxing" />


        <TextView
            android:id="@+id/textViewSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:padding="2dp"
            android:text="Sports" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonContinueFromActivities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Save"
        android:textColor="@color/white"
        android:background="@drawable/button_border"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>